# sort files
--sort-files

# always use color
--color

# match color is red instead of yellow background
--color-match=red

# always group matches to file
--group

# directories to ignore
--ignore-dir=tests
--ignore-dir=.venv
--ignore-dir=.tox
--ignore-dir=locale
--ignore-dir=integration_tests
--ignore-dir=match:.*\.egg-info
--ignore-dir=.hypothesis
--ignore-dir=build
--ignore-dir=.cache

# files to ignore
--ignore-file=is:.coverage
--ignore-file=is:coverage.xml
--ignore-file=is:test_results.xml
--ignore-file=is:kv_test_results.xml
--ignore-file=match:.*\.js
