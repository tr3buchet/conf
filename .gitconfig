[include]
    path = .gitconfig.user

[pull]
    ff = only

[merge]
    tool = meld
    #tool = vimdiff
    conflictstyle = diff3
    prompt = false

[rebase]
    autosquash = true

[diff]
    tool = meld
    #tool = vimdiff

[difftool]
  prompt = false

[core]
    pager = less -+X
    editor = vim

[alias]
    b = branch
    bd  = branch -D
    bm = ! git fetch --all --quiet && ~/bin/git_branch_merged
    comaa = commit -a --amend
    coma = commit -a
    comaf = commit -a --fixup
    c  = checkout
    cb = checkout -b
    fa = ! git fetch --all && echo "======local branch summary======" && ~/bin/git_branch_merged
    cleanup = clean -dxi
    tlog = log --oneline origin/master..HEAD --no-decorate
    subshas = ! git ls-tree -r HEAD | grep commit

[grep]
    exclude = locale

[log]
    decorate = auto
